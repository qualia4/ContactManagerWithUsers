@page
@model ContactManagerWithUsers.Pages.Contacts.ChangePasswordModel
@{
    ViewData["Title"] = "Changing password";
}

<h2>Change password</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-danger" role="alert">
        @Model.errorMessage
    </div>
}
<form method="post">
    <div class="col">
        <input type="password" class="form-control" placeholder="Password" name="password" required></input>
    </div>
    <p></p>
    <div class="col">
        <input type="password" class="form-control" placeholder="New password" name="newPassword" required></input>
    </div>
    <p></p>
    <div class="col">
        <input type="password" class="form-control" placeholder="Confirm new password" name="confirmPassword" required></input>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="alert alert-success" role="alert">
            @Model.successMessage
        </div>
    }
    <p></p>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>
